<li  id="comment-<%=comment._id %>">
    <%if (locals.user!= undefined && (locals.user.id == comment.user._id ||  locals.user.id == post.user._id))  { %>
        <small>
            <a id=" .delete-comment-button" href="/comment/destroy/<%=comment.id %>">X</a>
        </small>
    <%}%>
    <p>
        <%= comment.content %>
    <br>
    <small>
        <%= comment.user.name%>
    </small>

     <!-- CHANGE :: display the likes of this comment, if the user is logged in, then show the link to toggle likes, else, just show the count -->
            <!-- study about the data attribute -->
            <small>
                <% if (locals.user){ %>
                    <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                        <i class="fas fa-thumbs-up likesbutton">
                        <%= comment.likes.length %></i>
                    </a>
                <% }else{ %>
                    <i class="fas fa-thumbs-up likesbutton">
                        <%= comment.likes.length %></i>
                <% } %>
            </small>

    </p>
</li>